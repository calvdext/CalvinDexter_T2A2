<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @product.title %>
</p>

<p>
  <strong>Image:</strong>
  <%= image_tag @product.image if @product.image.attached? %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Used:</strong>
  <%= @product.used %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>

<p>
  <strong>User:</strong>
  <%= @product.user.username %>
</p>

<p>
  <strong>Subcategory:</strong>
  <%= @product.subcategory_id %>
</p>


<%= link_to "Send Message", new_message_path(receiver_id: @product.user, sender_id: current_user, product_id: @product) %>

