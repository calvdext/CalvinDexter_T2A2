<div class="card mb-3 mx-auto" style="max-width: 540px;">
    <div class="card-body">
      <div class="field mb-3">
        <div class="card-header">
          <h4 class="card-title"><strong>Message From <%= @message.sender.username%></strong></h4>
        </div>
      </div>
      <p>
        <strong><%= @message.sender.username%>:</strong>
        <%= @message.content %>
      </p>
      <div class="actions">
        <%= link_to "Reply", new_message_path(receiver_id: @message.sender_id, sender_id: current_user, message_id: @message, product_id: @message.product_id), class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>                        
                        
                      