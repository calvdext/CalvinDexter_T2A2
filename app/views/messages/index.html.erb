<p id="notice"><%= notice %></p>

<h1>Messages</h1>

<br>
<h3>New Received Messages</h3>
<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Sender</th>
      <th>Receiver</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% current_user.receiver_messages.each do |message| %>
      <tr>
        <td><%= message.content %></td>
        <td><%= message.sender_id %></td>
        <td><%= message.receiver_id %></td>
        <td><%= link_to 'Show', message %></td>
        <td><%= link_to 'Edit', edit_message_path(message) %></td>
        <td><%= link_to 'Destroy', message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<h3>All Conversations</h3>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Sender</th>
      <th>Receiver</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% current_user.sender_messages.each do |message| %>
      <tr>
        <td><%= message.content %></td>
        <td><%= message.sender_id %></td>
        <td><%= message.receiver_id %></td>
        <td><%= link_to 'Show', message %></td>
        <td><%= link_to 'Edit', edit_message_path(message) %></td>
        <td><%= link_to 'Destroy', message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
